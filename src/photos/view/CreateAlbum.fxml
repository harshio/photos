<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<GridPane
    xmlns="http://javafx.com/javafx/11"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="photos.controller.CreateAlbumController"
    vgap="10" hgap="10">
<!--should make it BulkController after I add the onActions-->
    <Text text="Album name: " GridPane.rowIndex="0"/>
    <TextField fx:id = "albumName" text = "write down an album name" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button fx:id = "createAlbum" text = "Create" GridPane.rowIndex = "1" onAction="#createAlbum"/>
    <Button fx:id="quitButton" text="Quit Application" GridPane.rowIndex="2" onAction="#quitApplication"/>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</GridPane>